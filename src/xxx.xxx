document                = grammar !eof
grammar                 = entry grammar / entry
entry                   = !ws var !_ !eq !_ rules !eol
rules                   = rule !_ !fs !_ rules / rule
rule                    = predicates / regex repl?
repl                    = !_ !ra !_ var
predicates              = predicate !_ predicates / predicate
predicate               = M? var Q?

ra          = /\A->/
fs          = /\A\//
_           = /\A[ \t]+/
ws          = /\A\s*/
eof         = /\A\z/
eol         = /\A\s*(?:$|\z)/
M           = /\A[!>]/ -> head
Q           = /\A[?]/
var         = /\A\w+/
regex       = /\A\/((?:\\.|[^\/])*)\//
eq          = /\A=/
